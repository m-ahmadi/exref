{
	"workbench.iconTheme": "vscode-icons",
	"workbench.colorTheme": "Visual Studio Light",
	"editor.fontSize": 15,
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.mouseWheelZoom": true,
	"editor.minimap.enabled": false,
	
	/** tab size and spaces */
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	
	/** intellisense */
	// "editor.quickSuggestions": false,           // when typing
	// "editor.suggestOnTriggerCharacters": false, // when on .
	// "editor.hover.enabled": false,              // popups
	
	/** misc */
	"editor.renderWhitespace": "none",          // show whitespace & tab (all|none)
	"diffEditor.ignoreTrimWhitespace": true,    // ignore whitespace char diffs
	"workbench.startupEditor": "none",          // don't show welcome screen
	"vsicons.dontShowNewVersionMessage": true,  // dont' show new version message
	// "window.openFilesInNewWindow": "off",    // open files in new window (not sure what it does)
	// "workbench.editor.enablePreview": false, // open files on single click (if true: 1-click=preview, 2-click=open)
	"workbench.colorCustomizations": {
		// "editor.background": "#fbfbfb",                   // background color
		// "editor.wordHighlightBackground": "#75D975",      // change word highlight color ("#d2c8ff" for matching html tag highlight color, but not the right solution)
		// "editor.selectionHighlightBackground": "#C0C0C0", // fixing selected text color highlight issue
		"editorBracketMatch.background": "#fff",
		"editorBracketMatch.border": "#ff0000",
	},
	
	/** treat hbs as html */
	"files.associations": {
		"*.hbs": "html",
	},
	
	/** disable git */
	// "git.enabled": false,
	
	/** integrated terminal (Features > Terminal > Integrated > Automation Shell: Windows) */
	"terminal.integrated.defaultProfile.windows": "Command Prompt", // "PowerShell" | "Git Bash"
	
	/** change typescript version used by vscode */
	// "typescript.tsdk": "C:/Users/NYC/AppData/Roaming/npm/node_modules/typescript/lib",
	
	/** extension: highlight-matching-tag  */
	"highlight-matching-tag.noDefaultEmptyElements": true,
	"highlight-matching-tag.highlightSelfClosing": true,
	"highlight-matching-tag.styles": {
		"opening": {
			"name": {"highlight": "#BF8DFF"},
			"left": {"highlight": "#BF8DFF"},
			"right": {"highlight": "#BF8DFF"},
		},
		"closing": {
			"name": {"highlight": "#BF8DFF"},
			"left": {"highlight": "#BF8DFF"},
			"right": {"highlight": "#BF8DFF"},
		}
	},
	
	/** for py debug */
	"debug.openDebug": "neverOpen",
	"debug.inlineValues": true,
	"debug.terminal.clearBeforeReusing": true,
	"python.showStartPage": false,
	"python.defaultInterpreterPath": "C:\\python39\\python.exe",
	"editor.snippetSuggestions": "top", // show prev history at bottom
}