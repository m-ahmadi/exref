# reference
# https://www.freedesktop.org/software/systemd/man/latest/systemd.service.html

--------------------------------------------------
# example - simplest (user)

[Unit]
Description=My App

[Service]
Type=oneshot
ExecStart=/home/foo/myapp/app.js
WorkingDirectory=/home/foo/myapp

[Install]
WantedBy=default.target
--------------------------------------------------
# example - simple binary (system)

[Unit]
Description=My Script

[Service]
ExecStart=/usr/local/bin/script.js
WorkingDirectory=/usr/local/bin
Environment=PATH=/usr/bin:/usr/local/bin
Restart=always
RestartSec=10
RestartSteps=60
RestartMaxDelaySec=600

[Install]
WantedBy=multi-user.target
--------------------------------------------------
# example - express.js server
# did not work (but works if `Group=` and `User=` lines are removed)

[Unit]
Description=My app

[Service]
ExecStart=/var/www/myapp/app.js
WorkingDirectory=/var/www/myapp
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production PORT=8080
Restart=always
User=nobody
Group=nogroup

[Install]
WantedBy=multi-user.target
--------------------------------------------------
# log control

# journal + custom files (systemd v249+)
StandardOutput=journal+append:/home/myuser/myapp/out.log
StandardError=journal+append:/home/myuser/myapp/error.log

# custom files only
StandardOutput=append:/home/myuser/myapp/out.log
StandardError=append:/home/myuser/myapp/error.log

# notes:
# the log directory must exist
# the user running the service must have write permission
