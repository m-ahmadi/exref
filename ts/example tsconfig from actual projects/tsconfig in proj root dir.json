{
  "compilerOptions": {
    "target": "es3",
    "module": "amd",
    "moduleResolution": "classic",
    "noImplicitAny": false,
    // "noEmitOnError": true,
    // "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "baseUrl": "./src/ts/",
    "rootDir": "./src/ts/",
    "outDir": "./dist/js/",
    "strict": true
  },
  "include": [
    "./src/ts/**/*"
  ],
  "exclude": [
    "node_modules/",
    "./dist/js",
    "**/@*.ts"
  ]
}